<div class="select-item-wrapper" data-nid="{{ nid }}">

  <div class="default-isotope" data-nid="{{ default_atom_nid }}">
    {% set expand_isotopes = (num_isotopes > 0) ? 'expand' : '' %}
    {% set expand_isobars = (num_isobars > 0) ? 'expand' : '' %}
    <span class="atomic-number">{{ atomic_number }}</span>
    <span class="atom-title {{ stability | lower }}">
      <a data-nid="{{ default_atom_nid }}" href="#" class="atom-name select-item-name">
          <span class="symbol">{{ symbol }}</span> <span class="title">{{ title }}</span>
      </a>
    </span>
    {# <span class="num-isobars {{ expand_isobars }}">{{ num_isobars }}</span> #}
    <span class="num-isotopes az-closed {{ expand_isotopes }}">{{ num_isotopes }}</span>
  </div>

  <div class="isobars" title="Isobars">
  </div>

  <div class="isotopes az-closed" title="Isotopes">
    {% if num_isotopes > 0  %}
      <ul class="isotope-list">
        {% for isotope in isotopes %}
          {% set default = (isotope.nid == nid) ? 'default' : 'not-default'  %}
          <li class="isotope {{ default }} {{ isotope.name | lower }}" data-nid="{{ isotope.nid }}">
            <a data-nid="{{ isotope.nid }}" href="#" class="atom-name">
              {{ isotope.title }}
            </a>
          </li>
        {% endfor %}
      </ul>
    {% endif %}
  </div>
</div>
